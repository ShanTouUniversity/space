---
const { frontmatter } = Astro.props;
---

<div class="shadow-md rounded px-4 py-2 mb-4 border border-gray-300">
  <p class="text-sm font-medium text-gray-600">
    {new Date(frontmatter.pubDate).toLocaleDateString()}, {frontmatter.author}
  </p>
  <p class="text-sm font-light text-gray-500">
    Tags:
    {
      frontmatter.tags.map((tag: string) => (
        <span class="inline-block bg-green-30 rounded-full px-2 py-1 text-xs font-medium text-green-700 border border-green-500 mr-4 mb-2"> <!-- 同时增加水平和垂直外边距 -->
          <a href={`/tags/${tag}`}> {tag} </a>
        </span>
      ))
    }
  </p>
</div>
