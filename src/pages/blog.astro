---
import BaseLayout from "../layouts/BaseLayout.astro";

import BlogPost from "../components/BlogPost.astro";


const allPosts = await Astro.glob('../pages/posts/**/*.{md,markdown,mdown,mkd,mdwn,mdx}');
const pageTitle = "博客";
---


<meta name="description" content="ST.U Space是一块试验田， 是 ST.U 的子域。网站使用 Astro开发。作为一个 Space， 作为一个 Anonymous Space， 这里会包含任何内容。" />
<meta name="author" content="ST.U" />
<meta name="keywords" content="STU, ST.U"/>

<BaseLayout pageTitle={pageTitle}>
    <ul>
        {
            allPosts.map(
                (post) => 
                <BlogPost url={post.url} title={post.frontmatter.title} date={post.frontmatter.pubDate} />
            )
        }
    </ul>
</BaseLayout>
